{
	"name": "chaport",
	"productName": "Chaport",
	"version": "2.0.2",
	"description": "Caprine updated to work with Chaport instead of the Facebook Messenger",
	"license": "MIT",
	"repository": "sindresorhus/caprine",
	"main": "dist-js",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "tsc && xo && stylelint \"css/**/*.css\"",
		"test": "npm run lint",
		"start": "tsc && electron .",
		"build": "tsc",
		"release": "np",
		"compile:mac": "tsc && electron-builder -m",
		"compile:win": "tsc && electron-builder -w"
	},
	"dependencies": {
		"dotenv": "^14.2.0",
		"electron-better-ipc": "^1.1.1",
		"electron-context-menu": "^2.3.0",
		"electron-debug": "^3.1.0",
		"electron-dl": "^3.0.2",
		"electron-localshortcut": "^3.2.1",
		"electron-notarize": "^1.1.1",
		"electron-store": "^6.0.1",
		"electron-updater": "^4.3.5",
		"electron-util": "^0.17.0",
		"element-ready": "^4.1.1",
		"facebook-locales": "^1.0.916",
		"is-online": "^8.5.1",
		"json-schema-typed": "^7.0.3",
		"lodash": "^4.17.20",
		"p-wait-for": "^3.1.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/electron-localshortcut": "^3.1.0",
		"@types/facebook-locales": "^1.0.0",
		"@types/lodash": "^4.14.165",
		"del-cli": "^3.0.1",
		"electron": "^10.1.5",
		"electron-builder": "^22.14.13",
		"husky": "^4.3.0",
		"np": "^7.0.0",
		"stylelint": "^13.8.0",
		"stylelint-config-xo": "^0.20.0",
		"typescript": "^4.4.4",
		"xo": "^0.39.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"rules": {
			"import/no-anonymous-default-export": "off",
			"@typescript-eslint/no-floating-promises": "off",
			"@typescript-eslint/no-loop-func": "off",
			"@typescript-eslint/no-non-null-assertion": "off"
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"declaration-no-important": null,
			"selector-class-pattern": null,
			"selector-id-pattern": null,
			"selector-max-class": null,
			"no-duplicate-selectors": null,
			"rule-empty-line-before": null,
			"no-descending-specificity": null
		}
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"publish": {
			"provider": "generic",
			"url": "https://www.chaport.com/downloads",
			"channel": "latest"
		},
		"files": [
			"**/*",
			"!media${/*}"
		],
		"asarUnpack": [
			"static/Icon.png",
			"static/IconMenuBarTemplate.png",
			"static/IconMenuBarTemplate@2x.png"
		],
		"appId": "com.chaport.chaportdesktop",
		"afterSign": "scripts/notarize.js",
		"mac": {
			"category": "public.app-category.business",
			"electronUpdaterCompatibility": ">=2.15.0",
			"darkModeSupport": false,
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist"
		},
		"dmg": {
			"sign": false,
			"icon": "build/icon.icns",
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb",
				"snap"
			],
			"icon": "build/icons/",
			"synopsis": "Chaport desktop app",
			"description": "Desktop application for Chaport.",
			"category": "Business;Chat"
		},
		"nsis": {
			"artifactName": "${productName}Setup-${version}.${ext}"
		},
		"win": {
			"verifyUpdateCodeSignature": false,
			"icon": "build/icon.png"
		}
	},
	"husky": {
		"hooks": {
			"pre-push": "npm test"
		}
	}
}
